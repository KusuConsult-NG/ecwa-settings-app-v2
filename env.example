# ChurchFlow Environment Variables
# Copy this file to .env.local for local development

# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=ChurchFlow
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Optional - for future use)
# DATABASE_URL=your_database_connection_string
# MONGODB_URI=your_mongodb_connection_string

# Authentication (Optional - for future use)
# JWT_SECRET=your_jwt_secret_key
# NEXTAUTH_SECRET=your_nextauth_secret
# NEXTAUTH_URL=http://localhost:3000

# Email Service (Gmail - Recommended)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Email Service (SendGrid - Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=noreply@churchflow.com

# Email Service (SMTP - Fallback)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password

# External Services (Optional - for future use)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
